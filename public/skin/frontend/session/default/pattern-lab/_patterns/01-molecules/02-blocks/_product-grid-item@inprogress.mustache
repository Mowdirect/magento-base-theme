<li class="item">
    {{> atoms-product-image }}
    <h2 class="product-name">
        <a href="{{ url }}" title="{{ product.name }}">{{ product.name }}</a>
    </h2>
    <div class="ratings">
        <div class="rating-box">
            <div class="rating" style="width:100%"></div>
        </div>
        <span class="amount">
            <a href="{{ url }}">{{ number }} Review(s)</a>
        </span>
    </div>
    {{> molecules-price }}
    <div class="actions">
        <button type="button" title="Add to Cart" class="button btn-cart">Add to Cart</button>
        <ul class="add-to-links">
            <li>
                <a href="{{ url }}" class="link-wishlist">Add to Wishlist</a>
            </li>
            <li>
                <span class="separator">|</span>

                <a href="{{ url }}" class="link-compare">Add to Compare</a>
            </li>
        </ul>
    </div>
</li>
