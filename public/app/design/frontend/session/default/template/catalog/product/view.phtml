                            <?php echo $this->getChildHtml('addto') ?>
                        <?php endif;?>
                    <?php endif; ?>

                    <?php if ($_product->getShortDescription()):?>
                        <div class="short-description std">
                            <h2><?php echo $this->__('Quick Overview') ?></h2>
                            <?php echo $_helper->productAttribute($_product, nl2br($_product->getShortDescription()), 'short_description') ?>
                        </div>
                    <?php endif;?>

                    <?php echo $this->getChildHtml('other');?>
                </div>

                <div class="product-img-box">
                    <?php echo $this->getChildHtml('media') ?>
                </div>

        </div>
        <div class="product-collateral">
            <?php if ($detailedInfoGroup = $this->getChildGroup('detailed_info', 'getChildHtml')):?>
                <div id="collateral-tabs" class="tabs collateral-tabs">
                <?php $_count = 1; ?>
                <?php foreach ($detailedInfoGroup as $alias => $html):?>
                    <div>
                        <input type="radio" name="tabs-product-info" id="product-info-toggle<?php echo $_count; ?>" class="input--toggle"<?php echo $_count == 1 ? ' checked' : ''; ?>>
                        <label for="product-info-toggle<?php echo $_count; ?>">Tab <?php echo $_count; ?></label>
                        <?php echo $this->escapeHtml($this->getChildData($alias, 'title')) ?>
                        <div>
                           <?php echo $html ?>
                        </div>
                    </div>
                    <?php $_count++; ?>
                <?php endforeach;?>
                </div>
            <?php endif; ?>
            <?php if ($this->canEmailToFriend()): ?>
                <p class="emailto-link"><a href="<?php echo $this->helper('catalog/product')->getEmailToFriendUrl($_product) ?>"><?php echo $this->__('Email to a Friend') ?></a></p>
            <?php endif; ?>
        </div>
        <div class="clearer"></div>
        <?php if ($_product->isSaleable() && $this->hasOptions() && $this->getChildChildHtml('container2') ):?>
            <div class="options-container-big">
                <?php echo $this->getChildChildHtml('container2', '', true, true) ?>
            </div>
        <?php endif;?>
    </form>
    <?php echo $this->getChildHtml('relatedProducts') ?>
    <?php echo $this->getChildHtml('upsell_products') ?>
    <?php echo $this->getChildHtml('productTagList') ?>
    <?php echo $this->getChildHtml('product_additional_data') ?>
</div>

<script>
