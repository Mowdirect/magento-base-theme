            <?php else: ?>
                <a href="<?php echo $this->helper('core/url')->getCurrentUrl(); ?>" title="<?php echo $this->escapeHtml($_crumbInfo['title']) ?>" itemprop="item"><span itemprop="name"><?php echo $this->escapeHtml($_crumbInfo['label']) ?></span></a>
